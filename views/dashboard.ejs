<%- include('shared/header.ejs') %>
<%- include('shared/adminNavigation.ejs') %>
<h1 class="textCenter">Dashboard</h1>
<div class="textCenter">
    <table class="ticketTable">
        <tr class="tableCenter">
            <th>ID</th>
            <th>Name</th>
            <th>Email/Phone</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% for(let ticket of tickets){ %>
            <tr>
                <td><%=ticket._id%></td>
                <td><%=ticket.name%></td>
                <td><%=ticket.emailOrPhone%></td>
                <td>
                    <a href="/view/<%=ticket._id%>">View</a>
                </td>
                <td>
                    <a href="/edit/<%=ticket._id%>">Edit</a>
                </td>
                <td>
                    <a href="/delete/<%=ticket._id%>">Delete</a>
                </td>
            </tr>
        <%}%>
    </table>
</div>
<%- include('shared/footer.ejs') %>