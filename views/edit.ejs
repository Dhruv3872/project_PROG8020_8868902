<%- include('shared/header.ejs') %>
<%- include('shared/adminNavigation.ejs') %>

<h1 class="textCenter">Edit Ticket</h1>
<form action="/thankForEditSubmission" method="post" enctype="multipart/form-data">
    <input style="display: none;" type="text" name="id", value="<%= _id%>">
    <div class ="grid1">
        <label for="name">Name:</label>
        <input type="text" name="name" value="<%= name%>">
    </div>
    <div class ="grid1">
        <label for="email">Email/Phone:</label>
        <input type="text" name="email" value="<%= emailOrPhone%>">
    </div>
    <div class ="grid1">
        <label for="description">Description</label>
        <input type="text" id="description" name="description" value="<%= description%>">
    </div>
    <input class="submitButton" type="submit" value="Submit">
</form>
</main>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="js/tinymce/jquery.tinymce.min.js"></script>
<script src="js/tinymce/tinymce.min.js"></script>
